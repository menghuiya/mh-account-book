/* packageA/pages/property/index.wxss */
page {
  background-color: #ffd608;
  height: 100%;
}
.mh-index-nav {
  background-color: #ffd608 !important;
}
.mh-index-nav .van-nav-bar__text {
  color: #000;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.property-head {
  padding: 30rpx 20rpx;
}

.property-head-text {
  font-size: 24rpx;
}

.property-head-amount {
  font-weight: 600;
  font-size: 46rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}

.property-head-amount-data {
  margin-right: 30rpx;
  flex: 1;
}

.property-head-info {
  display: flex;
  margin-top: 20rpx;
}

.property-head-info-left,
.property-head-info-right {
  flex: 1;
}

.property-head-info-data {
  font-weight: 600;
  margin: 10rpx 0;
}

.property-content {
  flex: 1;
  background-color: #fff;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  overflow-y: auto;
}

.mh-body-card-img {
  width: 80rpx;
  height: 80rpx;
}

.mh-cell-label {
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.mh-cell-value {
  color: #000;
  font-weight: 600;
}

.property-footer {
  background-color: #fff;
  border-top: 1px solid #e8e9ef;
  padding: 20rpx 0;
  text-align: center;
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}
