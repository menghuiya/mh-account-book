/**index.wxss**/

page {
  /* padding-top: 54rpx; */
  background-color: #f6f6f6;
  /* padding-bottom: 60rpx; */
}

.mh-pay-head {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.pay-head-left {
  display: flex;
  align-items: center;
}

.mh-pay-select {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.pay-head-right {
  position: relative;
  overflow: hidden;
  display: flex;
}
.mh-input-amount {
  width: 0;
  height: 0;
}

.mh-amount-text {
  font-size: 42rpx;
  font-weight: 600;
  transform: scaleY(1.2);
  display: inline-block;
}

.mh-pay-content {
  background-color: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
}
.mh-content-body {
  display: flex;
  flex-wrap: wrap;
}

.mh-body-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(100% / 4);
  color: #dbe3ea;
  padding: 10rpx;
  box-sizing: border-box;
}

.mh-body-card-img {
  width: 100rpx;
  height: 100rpx;
}

.mh-body-card-active {
  color: #fff;
  background: #ffd30c;
  border-radius: 10rpx;
}
