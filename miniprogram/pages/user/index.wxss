/**index.wxss**/

page {
  background-color: #ffd608;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.user-head {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.user-head-left {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.user-head-left-tag {
  position: absolute;
  right: -5rpx;
  bottom: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
}

.user-head-left-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-head-center {
  flex: 1;
}

.user-head-center-nologin {
  font-weight: 600;
  font-size: 30rpx;
}

.user-head-center-top {
  font-weight: 600;
  font-size: 32rpx;
}

.user-head-center-bottom {
  font-size: 24rpx;
}

.user-body {
  flex: 1;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.user-body-data {
  display: flex;
  align-items: center;
}

.user-body-data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(100% / 3);
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.user-body-data-item image {
  width: 90rpx;
  height: 90rpx;
}

.data-item-info {
  font-weight: 600;
  font-size: 32rpx;
}
.user-head-recomimg {
  width: 100%;
  height: 200rpx;
  display: inline-block;
  margin: 10rpx auto;
  border-radius: 10rpx;
}

.mh-cell {
  padding: 20rpx 0 !important;
}

.mh-cell-title {
  font-weight: 600;
}
